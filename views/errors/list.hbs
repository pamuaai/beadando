{{#extend "scripts"}}
<script src="/js/list.js"></script>
{{/extend}}

{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Házimunkák(drágán)</h1>
</div>
<form method="post">
<table class="table table-striped table-hover" id="errorTable">
    <thead>
        <tr>
            <th>Időpont</th>
            <th>Határidő</th>
            <th>Státusz</th>
            <th>Helyszín</th>
            <th>Leírás</th>
            <th>Módosítás</th>
            <th>Törlés</th>
        </tr>   
    </thead>
    
    <tbody>
        {{#each errors}}
        <tr>
            <td>{{date}}</td>
            <td>{{deadline}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{location}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
            <td><a href="/errors/{{id}}">Módosítás</a></td>
            <td><a href="/errors/delete/{{id}}">Törlés</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>


<p><a href="/errors/new" class="btn btn-default">Új munka felvitele</a>
</form>
